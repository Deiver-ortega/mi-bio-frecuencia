// Archivo: script.js

// üéµ PARTE 1: CONFIGURACI√ìN ROM√ÅNTICA
// ----------------------------------------------------
// ¬°CLAVE FINAL! La chica debe ingresar exactamente "yogurcito"
const CLAVE_CORRECTA = "yogurcito"; 

// Mensaje de amor final (Biolog√≠a + Ingenier√≠a)
// ¬°Ajusta este mensaje para que sea a√∫n m√°s rom√°ntico y personal!
const MENSAJE_FINAL = "Mi coraz√≥n encontr√≥ su frecuencia perfecta en ti. ¬°Te Amo!";
// ----------------------------------------------------


// Referencia al √°rea donde se muestra el c√≥digo
const consola = document.getElementById('consola-salida');
let ejecutando = false;

// Array de l√≠neas de simulaci√≥n con mensajes adaptados al color verde ne√≥n
const lineasSimulacion = [
    "---------------------------------------------------",
    ">> INICIANDO AN√ÅLISIS DE FRECUENCIA CARD√çACA...",
    ">> Estableciendo conexi√≥n con el ADN sentimental...",
    ">> [ERROR]: Acceso restringido. Se requiere CLAVE MUSICAL.",
    ">> Frecuencia Clave recibida: " + CLAVE_CORRECTA.toUpperCase(),
    ">> Procesando informaci√≥n gen√©tica y arm√≥nica...",
    ">> [OK]: ¬°Sincronizaci√≥n de amor al 100%!",
    "---------------------------------------------------",
    ">> DESBLOQUEANDO EL MENSAJE M√ÅS PURO DE MI CORAZ√ìN...",
];


// Funci√≥n para escribir texto letra por letra (typing effect)
function escribirLinea(linea, index, callback) {
    if (index < linea.length) {
        consola.textContent += linea[index];
        setTimeout(() => escribirLinea(linea, index + 1, callback), 20); // 20ms por letra
    } else {
        consola.textContent += '\n'; // Salto de l√≠nea
        if (callback) callback();
    }
}

// Funci√≥n que maneja la simulaci√≥n l√≠nea por l√≠nea
function simularAnalisis(indiceLinea) {
    if (indiceLinea < lineasSimulacion.length) {
        escribirLinea(lineasSimulacion[indiceLinea], 0, () => {
            simularAnalisis(indiceLinea + 1);
        });
    } else {
        // Cuando toda la simulaci√≥n termina, muestra el mensaje final
        mostrarMensajeFinal();
    }
}

// Muestra el mensaje de amor y AHORA inicia el video local
function mostrarMensajeFinal() {
    consola.innerHTML += `<span class="mensaje-final">${MENSAJE_FINAL}</span>`;
    ejecutando = false;

    // üé• C√ìDIGO PARA REPRODUCIR EL VIDEO LOCAL:
    const videoArea = document.getElementById('video-area');
    const videoPlayer = document.getElementById('video-player');

    // Muestra el contenedor del video
    videoArea.style.display = 'block';

    // Inicia la reproducci√≥n
    setTimeout(() => {
        videoPlayer.currentTime = 0; // Asegura que el video empiece desde el inicio
        
        videoPlayer.play().catch(error => {
            console.error("La reproducci√≥n autom√°tica fall√≥. Algunos navegadores pueden bloquear el autoplay. Intenta hacer clic en el bot√≥n de Play del video.");
            // Si falla el autoplay, el usuario puede darle clic a la barra de controles
        });

    }, 1000); 
    // ------------------------------------
}


// Funci√≥n principal llamada por el bot√≥n
function iniciarAnalisis() {
    if (ejecutando) return; // Evita doble clic

    const campoClave = document.getElementById('clave');
    // Normaliza la entrada (todo min√∫sculas, sin espacios)
    const intento = campoClave.value.toLowerCase().trim();

    if (intento === CLAVE_CORRECTA) {
        ejecutando = true;
        consola.textContent = ''; // Limpia la consola
        simularAnalisis(0); // Inicia la simulaci√≥n
    } else {
        // Mensaje de error ajustado para el estilo verde ne√≥n
        consola.textContent = `[ERROR] Frecuencia "${intento.toUpperCase()}" no encontrada. Por favor, ¬°piensa en NUESTRA canci√≥n!`;
        ejecutando = false;
        campoClave.value = ''; // Limpia el campo
    }
}
